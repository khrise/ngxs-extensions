{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["es2018", "es2017", "es7", "es6", "dom"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist", "**/*.spec*"]
}
